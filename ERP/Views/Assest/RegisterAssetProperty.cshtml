@section Scripts {
    <script>
        function antiForgery() {
            return {
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            };
        }

        function showAlert(msg, type = 'success') {
            $("#alertContainer").html(`
                <div class="alert alert-${type} alert-dismissible fade show">
                    ${msg}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            `);
            setTimeout(() => {
                $("#alertContainer .alert").alert('close');
            }, 4000);
        }

        let grid;

        $(document).ready(function () {
            grid = $("#assetPropertyGrid").data("kendoGrid");

            // ???????? ????? ? ???????
            loadAssets();
            loadUsers();

            grid.dataSource.bind("requestEnd", function (e) {
                if (e.type === "create") {
                    showAlert("?????? ?? ?????? ??? ??", "success");
                }
                if (e.type === "update") {
                    showAlert("?????? ?? ?????? ????? ??", "success");
                    $("#editPropertyModal").modal("hide");
                }
                if (e.type === "destroy") {
                    showAlert("??? ?? ?????? ????? ??", "success");
                }
            });
        });

        function loadAssets() {
            $.get("@Url.Action("GetAssets", "Assest")", function (data) {
                let assets = '<option value="">?????? ????</option>';
                data.forEach(function (item) {
                    assets += `<option value="${item.id}">${item.name}</option>`;
                });
                $("#editAssetId").html(assets);
            });
        }

        function loadUsers() {
            $.get("@Url.Action("GetAssetUsers", "Assest")", function (data) {
                let users = '<option value="">?????? ????</option>';
                data.forEach(function (item) {
                    users += `<option value="${item.id}">${item.name}</option>`;
                });
                $("#editLastOwnerUserId").html(users);
            });
        }

        function openEditPropertyModal(e) {
            e.preventDefault();
            let item = grid.dataItem($(e.currentTarget).closest("tr"));
            if (!item) {
                showAlert("??? ?? ?????? ???????", "danger");
                return;
            }

            $("#editPropertyId").val(item.Id);
            $("#editAssetId").val(item.AssetId);
            $("#editPropertyName").val(item.PropertyName);
            $("#editPropertyValue").val(item.PropertyValue);
            $("#editSerialNumber").val(item.SerialNumber);
            $("#editModel").val(item.Model);
            $("#editBrand").val(item.Brand);
            $("#editLastOwnerUserId").val(item.LastOwnerUserId || "");
            $("#editPropertyIsActive").prop("checked", item.IsActive);

            $("#editPropertyModal").modal("show");
        }

        $("#saveEditPropertyBtn").click(function () {
            let id = parseInt($("#editPropertyId").val());
            let item = grid.dataSource.get(id);

            if (!item) {
                showAlert("????? ???? ???", "danger");
                return;
            }

            item.set("AssetId", parseInt($("#editAssetId").val()));
            item.set("PropertyName", $("#editPropertyName").val());
            item.set("PropertyValue", $("#editPropertyValue").val());
            item.set("SerialNumber", $("#editSerialNumber").val());
            item.set("Model", $("#editModel").val());
            item.set("Brand", $("#editBrand").val());
            item.set("LastOwnerUserId", parseInt($("#editLastOwnerUserId").val()) || null);
            item.set("IsActive", $("#editPropertyIsActive").is(":checked"));

            grid.dataSource.sync();
        });
    </script>
}
