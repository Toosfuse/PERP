@section Scripts {
    <script>
        function antiForgery() {
            return {
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            };
        }

        function showAlert(msg, type = 'success') {
            $("#alertContainer").html(`
                <div class="alert alert-${type} alert-dismissible fade show" role="alert">
                    ${msg}
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
                </div>
            `);
            setTimeout(() => {
                $("#alertContainer .alert").alert('close');
            }, 4000);
        }

        let grid;

        $(document).ready(function () {
            grid = $("#assetHistoryGrid").data("kendoGrid");

            // ???????? ????? ? ???????
            loadAssets();
            loadUsers();

            // ?????? ????? ????? ???? ???????? ??????
            $(document).on("change", "#editHistoryAssetId", function () {
                let assetId = $(this).val();
                if (assetId) {
                    $.get("@Url.Action("GetAssetPropertiesForAssignment", "Assest")?assetId=" + assetId, function (data) {
                        let properties = '<option value="">?????? ????</option>';
                        data.forEach(function (item) {
                            properties += `<option value="${item.id}">${item.name}</option>`;
                        });
                        $("#editHistoryAssetPropertyId").html(properties);
                    });
                }
            });

            grid.dataSource.bind("requestEnd", function (e) {
                if (e.type === "create") {
                    showAlert("?????? ?? ?????? ??? ??", "success");
                }
                if (e.type === "update") {
                    showAlert("?????? ?? ?????? ????? ??", "success");
                    $("#editHistoryModal").modal("hide");
                }
                if (e.type === "destroy") {
                    showAlert("??? ?? ?????? ????? ??", "success");
                }
            });
        });

        function loadAssets() {
            $.get("@Url.Action("GetAssetsForAssignment", "Assest")", function (data) {
                let assets = '<option value="">?????? ????</option>';
                data.forEach(function (item) {
                    assets += `<option value="${item.id}">${item.name}</option>`;
                });
                $("#editHistoryAssetId").html(assets);
            });
        }

        function loadUsers() {
            $.get("@Url.Action("GetAssetUsers", "Assest")", function (data) {
                let users = '<option value="">?????? ????</option>';
                data.forEach(function (item) {
                    users += `<option value="${item.id}">${item.name}</option>`;
                });
                $("#editHistoryFromUser").html(users);
                $("#editHistoryToUser").html(users);
            });
        }

        function openEditHistoryModal(e) {
            e.preventDefault();
            let item = grid.dataItem($(e.currentTarget).closest("tr"));
            if (!item) {
                showAlert("??? ?? ?????? ???????", "danger");
                return;
            }

            $("#editHistoryId").val(item.Id);
            $("#editHistoryAssetId").val(item.AssetId);
            $("#editHistoryAssetPropertyId").val(item.AssetPropertyId || "");
            $("#editHistoryDescription").val(item.Description);

            $("#editHistoryModal").modal("show");
        }

        $("#saveEditHistoryBtn").on("click", function () {
            let id = parseInt($("#editHistoryId").val());
            let item = grid.dataSource.get(id);

            if (!item) {
                showAlert("????? ???? ???", "danger");
                return;
            }

            item.set("AssetId", parseInt($("#editHistoryAssetId").val()));
            item.set("AssetPropertyId", parseInt($("#editHistoryAssetPropertyId").val()) || null);
            item.set("Description", $("#editHistoryDescription").val());

            grid.dataSource.sync();
        });
    </script>
}
