@model ERP.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/vali admin rtl/main.css" rel="stylesheet" />
    <link href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
        <link href="~/login/login.css" rel="stylesheet" />
    <style>
        #bg-video {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw; 
            height: 100vh; 
            object-fit: cover; 
            z-index: -1; /* پشت محتوا */
            pointer-events: none; 
        }

        .login-content {
            position: relative;
            z-index: 1;
        }
    </style>
    <title>ERP TFC</title>
</head>
<body>
    @*    <section class="material-half-bg">
        <div class="cover"></div>
        <canvas id="particle-canvas"></canvas>
    </section> *@
    <video autoplay muted loop id="bg-video" playsinline>
        <source src="~/login/tfc.mp4" type="video/mp4" />
        <source src="~/login/tfc.webm" type="audio/webm" />
        مرورگر شما ویدیو را پشتیبانی نمی‌کند.
    </video>
    <section class="login-content">
        <div class="logo">
            <h2 class="rainbow rainbow_text_animated">سیستم یکپارچه منابع سازمانی توس فیوز</h2>
        </div>
        <div class="login-box">
            <div class="container">
                <div class="row">
              @*       <div class="col-sm imagelogo">
                        <img src="~/icon/Login_Logo.png" width="350" />
                    </div> *@
                    <div class="col-sm">
                        <form class="login-form" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["returnUrl"]" method="post">
                            <div asp-validation-summary="ModelOnly"></div>

                            @if (ViewData["ErrorMessage"] != null)
                            {
                                <div class="text-danger">@ViewData["ErrorMessage"]</div>
                            }
                            <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>ورود</h3>
                            <div class="form-group">
                                <label class="control-label">نام کاربری</label>
                                @*                     <input class="form-control" type="text" autofocus> *@
                                <input asp-for="UserName" class="form-control" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">رمز عبور</label>
                                @*                     <input class="form-control" type="password"> *@
                                <input asp-for="Password" type="password" class="form-control" class="form-control" />
                            </div>
                            <div class="form-group">
                                <div class="utility">
                                    <div class="animated-checkbox">
                                        <label>
                                            <input type="checkbox" asp-for="RememberMe"><span class="label-text">مرا به خاطر بسپار</span>
                                        </label>
                                    </div>
                                    @* <p class="semibold-text mb-2"><a href="#" data-toggle="flip">Forgot Password ?</a></p> *@
                                </div>
                            </div>
                            <div class="form-group btn-container">
                                <button class="btn btn-primary btn-block" type="submit"><i class="fa fa-sign-in fa-lg fa-fw"></i>ورود</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>



        </div>

    </section>



    @section Scripts
    {
        <script type="text/javascript">
            $('.login-content [data-toggle="flip"]').click(function () {
                $('.login-box').toggleClass('flipped');
                return false;
            });
        </script>
       @*  <script src="~/login/script.js"></script> *@
    }
</body>
</html>