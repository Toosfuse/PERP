@model ERP.ViewModels.Account.ResetPasswordVM
@{
    ViewData["Title"] = "Edit";
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/vali admin rtl/main.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>سیستم نرم افزاری توس فیوز</title>
</head>
<body>
    <section class="material-half-bg">
        <div class="cover"></div>
    </section>
    <section class="login-content">
        <div class="logo">
            <h1>Toosfuse Erp</h1>
        </div>
        <div class="login-box">

            <form class="login-form" asp-controller="Account" asp-action="ResetPassword" asp-route-returnUrl="@ViewData["returnUrl"]" method="post">
                <div asp-validation-summary="ModelOnly"></div>

                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="text-danger">@ViewData["ErrorMessage"]</div>
                }
                <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>تغییر رمز عبور</h3>
                <div class="form-group">
                    <label class="control-label">رمز عبور جدید:</label>
                    <input asp-for="NewPassword" class="form-control" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">تکرار رمز عبور جدید:</label>
                    <input asp-for="ConfirmNewPassword" type="password" class="form-control" class="form-control" />
                </div>
                <input hidden="" asp-for="Token" value="ali" />
                <div class="form-group btn-container">
                    <button class="btn btn-primary btn-block" type="submit"><i class="fa fa-sign-in fa-lg fa-fw"></i>ثبت</button>
                </div>
            </form>
        </div>
    </section>


    <script type="text/javascript">
        // Login Page Flipbox control
        $('.login-content [data-toggle="flip"]').click(function () {
            $('.login-box').toggleClass('flipped');
            return false;
        });
    </script>
    @section Scripts
    {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>