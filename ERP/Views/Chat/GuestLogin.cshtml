@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود مهمان - چت</title>
    <link href="~/vali admin rtl/main.css" rel="stylesheet" />
    <link href="~/vali admin rtl/Orange.css" rel="stylesheet" />

    <link href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/login/login.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            font-family: IRANSans, Tahoma, sans-serif;
            position: relative;
            overflow: hidden;
        }
        body::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: 
                radial-gradient(circle at 20% 30%, rgba(102, 102, 255, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(255, 51, 153, 0.15) 0%, transparent 50%),
                radial-gradient(circle at 50% 50%, rgba(0, 255, 0, 0.08) 0%, transparent 60%);
            animation: backgroundShift 20s ease-in-out infinite;
        }
        @@keyframes backgroundShift {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
        .app-header {
            text-align: center;
            z-index: 10;
            margin-bottom: 30px;
        }
        .app-title {
            font-size: 32px;
            font-weight: 800;
            background-size: 200% 200%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: rainbowFlow 4s ease infinite;
            margin: 0;
            letter-spacing: 1px;
        }
        @@keyframes rainbowFlow {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        .guest-login-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
            max-width: 400px;
            width: 100%;
            position: relative;
            z-index: 10;
            backdrop-filter: blur(10px);
        }
        .guest-login-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .guest-login-header h2 {
            color: #333;
            margin-bottom: 10px;
        }
        .guest-login-header p {
            color: #666;
            font-size: 14px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #333;
            font-weight: bold;
        }
        .form-group input, .form-group select {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 16px;
            transition: border-color 0.3s;
        }
        .form-group input:focus, .form-group select:focus {
            outline: none;
            border-color: #667eea;
        }
        .btn-submit {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s;
            margin-bottom: 15px;
        }
        .btn-company-login {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .btn-company-login:hover {
            transform: translateY(-2px);
        }
        .company-login-form {
            display: none;
        }
        .company-login-form.active {
            display: block;
        }
        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 15px;
        }
        .checkbox-group input[type="checkbox"] {
            width: auto;
        }
        .btn-submit:hover {
            transform: translateY(-2px);
        }
        .btn-submit:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        .error-message {
            color: #e74c3c;
            font-size: 14px;
            margin-top: 10px;
            text-align: center;
        }

        .rainbow_text_animated {
            background: linear-gradient(90deg, 
                #6666ff 0%, 
                #0099ff 20%, 
                #00ff00 40%, 
                #ffff00 60%, 
                #ff3399 80%, 
                #6666ff 100%);
            background-size: 300% 100%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: rainbow_animation 5s linear infinite;
            font-size: 36px;
            font-weight: 900;
            text-shadow: 0 0 30px rgba(102, 102, 255, 0.5);
            filter: drop-shadow(0 0 20px rgba(102, 102, 255, 0.4));
            letter-spacing: 2px;
        }
        @@keyframes rainbow_animation {
            0% { background-position: 0% 50%; }
            100% { background-position: 300% 50%; }
        }
        .logo {
            text-align: center;
            margin-bottom: 40px;
            z-index: 10;
        }
    </style>
</head>
<body>
    <div class="logo">
        <h2 class="rainbow rainbow_text_animated">ارتباط آنلاین توس فیوز</h2>
    </div>
    <div class="guest-login-container">
        <div class="guest-login-header">
            <h2>ورود مهمان</h2>
            <p>برای دسترسی به چت، اطلاعات خود را وارد کنید</p>
        </div>

        <form id="guestForm">
            <div class="form-group">
                <label>شماره موبایل</label>
                <input type="text" id="phoneNumber" placeholder="09123456789" maxlength="11" required>
            </div>
            <div class="form-group">
                <label>نام</label>
                <input type="text" id="firstName" placeholder="نام" required>
            </div>
            <div class="form-group">
                <label>نام خانوادگی</label>
                <input type="text" id="lastName" placeholder="نام خانوادگی" required>
            </div>
            <div class="form-group">
                <label>بخش</label>
                <select id="groupSelect" required>
                    <option value="">انتخاب بخش...</option>
                </select>
            </div>
            <button type="submit" class="btn-submit" id="loginBtn">ورود مهمان</button>
            <button type="button" class="btn-company-login" id="companyLoginBtn">ورود کارکنان سازمان</button>
            <div id="loginError" class="error-message"></div>
        </form>

        <form id="companyForm" class="company-login-form">
            <div class="form-group">
                <label>نام کاربری</label>
                <input type="text" id="username" placeholder="نام کاربری" required>
            </div>
            <div class="form-group">
                <label>رمز عبور</label>
                <input type="password" id="password" placeholder="رمز عبور" required>
            </div>
            <div class="checkbox-group">
                <input type="checkbox" id="rememberMe">
                <label for="rememberMe" style="margin:0;">مرا به خاطر بسپار</label>
            </div>
            <button type="submit" class="btn-submit" id="companyLoginSubmitBtn">ورود</button>
            <button type="button" class="btn-company-login" id="backToGuestBtn">بازگشت به ورود مهمان</button>
            <div id="companyLoginError" class="error-message"></div>
        </form>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            loadGroups();
        });

        document.getElementById('guestForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const phoneNumber = document.getElementById('phoneNumber').value;
            const firstName = document.getElementById('firstName').value;
            const lastName = document.getElementById('lastName').value;
            const groupId = document.getElementById('groupSelect').value;
            const errorDiv = document.getElementById('loginError');
            const btn = document.getElementById('loginBtn');

            if (!/^09\d{9}$/.test(phoneNumber)) {
                errorDiv.textContent = 'شماره موبایل معتبر نیست';
                return;
            }

            if (!groupId) {
                errorDiv.textContent = 'لطفا بخش را انتخاب کنید';
                return;
            }

            btn.disabled = true;
            btn.textContent = 'در حال ورود...';
            errorDiv.textContent = '';

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new URLSearchParams();
                formData.append('phoneNumber', phoneNumber);
                formData.append('firstName', firstName);
                formData.append('lastName', lastName);
                formData.append('image', 'Male.png');
                formData.append('groupId', groupId);
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('/Chat/GuestDirectLogin', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: formData.toString()
                });

                const data = await response.json();

                if (data.success) {
                    window.location.href = '/Chat/Index';
                } else {
                    errorDiv.textContent = data.error || 'خطا در ورود';
                }
            } catch (error) {
                errorDiv.textContent = 'خطا در ارتباط با سرور';
                console.error(error);
            } finally {
                btn.disabled = false;
                btn.textContent = 'ورود';
            }
        });

        async function loadGroups() {
            try {
                const response = await fetch('/Chat/GetGroups');
                const groups = await response.json();
                const select = document.getElementById('groupSelect');
                groups.forEach(group => {
                    const option = document.createElement('option');
                    option.value = group.id;
                    option.textContent = group.name;
                    select.appendChild(option);
                });
            } catch (error) {
                console.error('خطا در بارگذاری بخشها', error);
            }
        }

        document.getElementById('companyLoginBtn').addEventListener('click', function() {
            document.getElementById('guestForm').style.display = 'none';
            document.getElementById('companyForm').classList.add('active');
            document.querySelector('.guest-login-header h2').textContent = 'ورود کارکنان';
            document.querySelector('.guest-login-header p').textContent = 'با نام کاربری و رمز عبور خود وارد شوید';
        });

        document.getElementById('backToGuestBtn').addEventListener('click', function() {
            document.getElementById('companyForm').classList.remove('active');
            document.getElementById('guestForm').style.display = 'block';
            document.querySelector('.guest-login-header h2').textContent = 'ورود مهمان';
            document.querySelector('.guest-login-header p').textContent = 'برای دسترسی به چت، اطلاعات خود را وارد کنید';
        });

        document.getElementById('companyForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const rememberMe = document.getElementById('rememberMe').checked;
            const errorDiv = document.getElementById('companyLoginError');
            const btn = document.getElementById('companyLoginSubmitBtn');

            btn.disabled = true;
            btn.textContent = 'در حال ورود...';
            errorDiv.textContent = '';

            try {
                const formData = new URLSearchParams();
                formData.append('UserName', username);
                formData.append('Password', password);
                formData.append('RememberMe', rememberMe);

                const response = await fetch('/Account/Login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: formData.toString()
                });

                const data = await response.json();

                if (data.success) {
                    window.location.href = '/Chat/Index';
                } else {
                    errorDiv.textContent = data.error || 'نام کاربری یا رمز عبور اشتباه است';
                }
            } catch (error) {
                errorDiv.textContent = 'خطا در ارتباط با سرور';
                console.error(error);
            } finally {
                btn.disabled = false;
                btn.textContent = 'ورود';
            }
        });
    </script>
    @Html.AntiForgeryToken()
</body>
</html>
