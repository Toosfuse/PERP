@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود مهمان - چت</title>
    <link href="~/vali admin rtl/main.css" rel="stylesheet" />
    <link href="~/vali admin rtl/Orange.css" rel="stylesheet" />

    <link href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/login/login.css" rel="stylesheet" />
    <style>

        @@font -face {
            font-family: 'yekan';
            src: url("../../fonts/yekanweb.eot");
            src: url("../../fonts/yekanweb.eot?#iefix") format("embedded-opentype"),url("../../fonts/yekanweb.woff") format("woff"),url("../../fonts/yekanweb.ttf") format("truetype"),url("../../fonts/yekanweb.svg#web_Yekan") format("svg");
            font-style: normal;
            font-weight: normal;
            text-rendering: optimizeLegibility;
        }

        @@font -face {
            font-family: 'numbers';
            src: url("../../fonts/yekannumbers.eot");
            src: url("../../fonts/yekannumbers.eot?#iefix") format("embedded-opentype"),url("../../fonts/yekannumbers.woff") format("woff"),url("../../fonts/yekannumbers.ttf") format("truetype"),url("../../fonts/yekannumbers.svg#web_Yekan") format("svg");
            font-style: normal;
            font-weight: normal;
            text-rendering: optimizeLegibility;
        }

        body {
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            font-family: "yekan","numbers";
            position: relative;
            overflow: hidden;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: radial-gradient(circle at 20% 30%, rgba(102, 102, 255, 0.15) 0%, transparent 50%), radial-gradient(circle at 80% 70%, rgba(255, 51, 153, 0.15) 0%, transparent 50%), radial-gradient(circle at 50% 50%, rgba(0, 255, 0, 0.08) 0%, transparent 60%);
                animation: backgroundShift 20s ease-in-out infinite;
            }

        @@keyframes backgroundShift {
            0%, 100% {
                opacity: 1;
            }

            50% {
                opacity: 0.7;
            }
        }

        .guest-login-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
            max-width: 400px;
            width: 100%;
            position: relative;
            z-index: 10;
            backdrop-filter: blur(10px);
        }

        .guest-login-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .guest-login-header h2 {
                color: #333;
                margin-bottom: 10px;
            }

            .guest-login-header p {
                color: #666;
                font-size: 14px;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                color: #333;
                font-weight: bold;
            }

            .form-group input, .form-group select {
                width: 100%;
                padding: 12px;
                border: 2px solid #e0e0e0;
                border-radius: 8px;
                font-size: 16px;
                transition: border-color 0.3s;
            }

                .form-group input:focus, .form-group select:focus {
                    outline: none;
                    border-color: #667eea;
                }

        .btn-submit {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s;
            margin-bottom: 15px;
        }

        .btn-company-login {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.2s;
            margin-bottom: 15px;
        }

            .btn-company-login:hover {
                transform: translateY(-2px);
            }

        .hidden-form {
            display: none !important;
        }

            .hidden-form.show {
                display: block !important;
            }

        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 15px;
        }

            .checkbox-group input[type="checkbox"] {
                width: auto;
            }

        .btn-submit:hover {
            transform: translateY(-2px);
        }

        .btn-submit:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .error-message {
            color: #e74c3c;
            font-size: 14px;
            margin-top: 10px;
            text-align: center;
        }

        .rainbow_text_animated {
            background: linear-gradient(90deg, #6666ff 0%, #0099ff 20%, #00ff00 40%, #ffff00 60%, #ff3399 80%, #6666ff 100%);
            background-size: 300% 100%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: rainbow_animation 5s linear infinite;
            font-size: 36px;
            font-weight: 900;
            text-shadow: 0 0 30px rgba(102, 102, 255, 0.5);
            filter: drop-shadow(0 0 20px rgba(102, 102, 255, 0.4));
            letter-spacing: 2px;
        }

        @@keyframes rainbow_animation {
            0% {
                background-position: 0% 50%;
            }

            100% {
                background-position: 300% 50%;
            }
        }

        .logo {
            text-align: center;
            margin-bottom: 40px;
            z-index: 10;
        }
    </style>
</head>
<body>
    <div class="logo">
        <h2 class="rainbow rainbow_text_animated">ارتباط آنلاین توس فیوز</h2>
    </div>
    <div class="guest-login-container">
        <div class="guest-login-header">
            <h2 id="headerTitle">ورود مهمان</h2>
            <p id="headerDesc">شماره موبایل و بخش خود را وارد کنید</p>
        </div>

        <form id="loginForm">
            <div class="form-group">
                <label>شماره موبایل</label>
                <input type="text" id="loginPhoneNumber" placeholder="09123456789" maxlength="11" required>
            </div>
            <div class="form-group">
                <label>بخش</label>
                <select id="loginGroupSelect" required>
                    <option value="">انتخاب بخش...</option>
                </select>
            </div>
            <button type="submit" class="btn-submit" id="loginBtn">ورود</button>
            <button type="button" class="btn-company-login" id="toRegisterBtn">ثبت نام</button>
            <button type="button" class="btn-company-login" id="toCompanyBtn">ورود کارکنان</button>
            <div id="loginError" class="error-message"></div>
        </form>

        <form id="registerForm" class="hidden-form">
            <div class="form-group">
                <label>شماره موبایل</label>
                <input type="text" id="regPhoneNumber" placeholder="09123456789" maxlength="11" required>
            </div>
            <div class="form-group">
                <label>نام</label>
                <input type="text" id="regFirstName" placeholder="نام" required>
            </div>
            <div class="form-group">
                <label>نام خانوادگی</label>
                <input type="text" id="regLastName" placeholder="نام خانوادگی" required>
            </div>
            <div class="form-group">
                <label>بخش</label>
                <select id="regGroupSelect" required>
                    <option value="">انتخاب بخش...</option>
                </select>
            </div>
            <button type="submit" class="btn-submit" id="registerBtn">ثبت نام</button>
            <button type="button" class="btn-company-login" id="backToLoginBtn">بازگشت</button>
            <div id="registerError" class="error-message"></div>
        </form>

        <form id="companyForm" class="hidden-form">
            <div class="form-group">
                <label>نام کاربری</label>
                <input type="text" id="username" placeholder="نام کاربری" required>
            </div>
            <div class="form-group">
                <label>رمز عبور</label>
                <input type="password" id="password" placeholder="رمز عبور" required>
            </div>
            <div class="checkbox-group">
                <input type="checkbox" id="rememberMe">
                <label for="rememberMe" style="margin:0;">مرا به خاطر بسپار</label>
            </div>
            <button type="submit" class="btn-submit" id="companyLoginBtn">ورود</button>
            <button type="button" class="btn-company-login" id="backToLoginBtn2">بازگشت</button>
            <div id="companyError" class="error-message"></div>
        </form>
    </div>

    <script>
        document.getElementById('toRegisterBtn').addEventListener('click', function() {
            document.getElementById('loginForm').classList.add('hidden-form');
            document.getElementById('registerForm').classList.add('show');
            document.getElementById('headerTitle').textContent = 'ثبت نام مهمان';
            document.getElementById('headerDesc').textContent = 'اطلاعات خود را وارد کنید';
        });

        document.getElementById('toCompanyBtn').addEventListener('click', function() {
            document.getElementById('loginForm').classList.add('hidden-form');
            document.getElementById('companyForm').classList.add('show');
            document.getElementById('headerTitle').textContent = 'ورود کارکنان';
            document.getElementById('headerDesc').textContent = 'نام کاربری و رمز عبور خود را وارد کنید';
        });

        document.getElementById('backToLoginBtn').addEventListener('click', function() {
            document.getElementById('registerForm').classList.remove('show');
            document.getElementById('loginForm').classList.remove('hidden-form');
            document.getElementById('headerTitle').textContent = 'ورود مهمان';
            document.getElementById('headerDesc').textContent = 'شماره موبایل و بخش خود را وارد کنید';
        });

        document.getElementById('backToLoginBtn2').addEventListener('click', function() {
            document.getElementById('companyForm').classList.remove('show');
            document.getElementById('loginForm').classList.remove('hidden-form');
            document.getElementById('headerTitle').textContent = 'ورود مهمان';
            document.getElementById('headerDesc').textContent = 'شماره موبایل و بخش خود را وارد کنید';
        });

        async function loadGroups() {
            try {
                const response = await fetch('/Chat/GetGroups');
                if (!response.ok) return;
                const groups = await response.json();
                if (Array.isArray(groups)) {
                    [document.getElementById('loginGroupSelect'), document.getElementById('regGroupSelect')].forEach(select => {
                        select.innerHTML = '<option value="">انتخاب بخش...</option>';
                        groups.forEach(group => {
                            const option = document.createElement('option');
                            option.value = group.id;
                            option.textContent = group.name;
                            select.appendChild(option);
                        });
                    });
                }
            } catch (error) {
                console.error('خطا:', error);
            }
        }
        loadGroups();

        document.getElementById('regPhoneNumber').addEventListener('blur', async function() {
            const phoneNumber = this.value;
            if (!/^09\d{9}$/.test(phoneNumber)) return;
            try {
                const response = await fetch(`/Chat/CheckGuestPhone?phoneNumber=${phoneNumber}`);
                const data = await response.json();
                if (data.exists) {
                    document.getElementById('regFirstName').value = data.firstName || '';
                    document.getElementById('regLastName').value = data.lastName || '';
                }
            } catch (error) {
                console.error('خطا:', error);
            }
        });

        document.getElementById('loginForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const phoneNumber = document.getElementById('loginPhoneNumber').value;
            const groupId = document.getElementById('loginGroupSelect').value;
            const errorDiv = document.getElementById('loginError');
            const btn = document.getElementById('loginBtn');

            if (!/^09\d{9}$/.test(phoneNumber)) {
                errorDiv.textContent = 'شماره موبایل معتبر نیست';
                return;
            }

            if (!groupId) {
                errorDiv.textContent = 'لطفا بخش را انتخاب کنید';
                return;
            }

            try {
                const checkResponse = await fetch(`/Chat/CheckGuestPhone?phoneNumber=${phoneNumber}`);
                const checkData = await checkResponse.json();
                if (!checkData.exists) {
                    errorDiv.textContent = 'این شماره ثبت نام نشده است. لطفا ثبت نام کنید';
                    return;
                }
            } catch (error) {
                console.error('خطا:', error);
            }

            btn.disabled = true;
            btn.textContent = 'در حال ورود...';
            errorDiv.textContent = '';

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new URLSearchParams();
                formData.append('phoneNumber', phoneNumber);
                formData.append('groupId', groupId);
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('/Chat/GuestDirectLogin', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: formData.toString()
                });

                const data = await response.json();

                if (data.success) {
                    window.location.href = '/Chat/Index';
                } else {
                    errorDiv.textContent = data.error || 'خطا در ورود';
                }
            } catch (error) {
                errorDiv.textContent = 'خطا در ارتباط با سرور';
                console.error(error);
            } finally {
                btn.disabled = false;
                btn.textContent = 'ورود';
            }
        });

        document.getElementById('registerForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const phoneNumber = document.getElementById('regPhoneNumber').value;
            const firstName = document.getElementById('regFirstName').value;
            const lastName = document.getElementById('regLastName').value;
            const groupId = document.getElementById('regGroupSelect').value;
            const errorDiv = document.getElementById('registerError');
            const btn = document.getElementById('registerBtn');

            if (!/^09\d{9}$/.test(phoneNumber)) {
                errorDiv.textContent = 'شماره موبایل معتبر نیست';
                return;
            }

            if (!groupId) {
                errorDiv.textContent = 'لطفا بخش را انتخاب کنید';
                return;
            }

            try {
                const checkResponse = await fetch(`/Chat/CheckGuestPhone?phoneNumber=${phoneNumber}`);
                const checkData = await checkResponse.json();
                if (checkData.exists) {
                    errorDiv.textContent = 'این شماره قبلاً ثبت شده است';
                    return;
                }
            } catch (error) {
                console.error('خطا:', error);
            }

            btn.disabled = true;
            btn.textContent = 'در حال ثبت نام...';
            errorDiv.textContent = '';

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const formData = new URLSearchParams();
                formData.append('phoneNumber', phoneNumber);
                formData.append('firstName', firstName);
                formData.append('lastName', lastName);
                formData.append('image', 'Male.png');
                formData.append('groupId', groupId);
                formData.append('__RequestVerificationToken', token);

                const response = await fetch('/Chat/GuestDirectLogin', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: formData.toString()
                });

                const data = await response.json();

                if (data.success) {
                    window.location.href = '/Chat/Index';
                } else {
                    errorDiv.textContent = data.error || 'خطا در ثبت نام';
                }
            } catch (error) {
                errorDiv.textContent = 'خطا در ارتباط با سرور';
                console.error(error);
            } finally {
                btn.disabled = false;
                btn.textContent = 'ثبت نام';
            }
        });

        document.getElementById('companyForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const rememberMe = document.getElementById('rememberMe').checked;
            const errorDiv = document.getElementById('companyError');
            const btn = document.getElementById('companyLoginBtn');

            btn.disabled = true;
            btn.textContent = 'در حال ورود...';
            errorDiv.textContent = '';

            try {
                const formData = new URLSearchParams();
                formData.append('UserName', username);
                formData.append('Password', password);
                formData.append('RememberMe', rememberMe);

                const response = await fetch('/Account/Login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: formData.toString()
                });

                const data = await response.json();

                if (data.success) {
                    window.location.href = '/Chat/Index';
                } else {
                    errorDiv.textContent = data.error || 'نام کاربری یا رمز عبور اشتباه است';
                }
            } catch (error) {
                errorDiv.textContent = 'خطا در ارتباط با سرور';
                console.error(error);
            } finally {
                btn.disabled = false;
                btn.textContent = 'ورود';
            }
        });
    </script>
    @Html.AntiForgeryToken()
</body>
</html>
